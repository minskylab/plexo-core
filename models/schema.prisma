datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Project {
    id         String    @id @unique @default(uuid())
    created_at DateTime? @default(now())
    updated_at DateTime? @default(now()) @updatedAt
    name       String
    prefix     String?
    tasks      Task[]    @relation("TasksByProjects")
}

model Task {
    id          String    @id @unique @default(uuid())
    created_at  DateTime? @default(now())
    updated_at  DateTime? @default(now()) @updatedAt
    title       String
    description String?
    projects    Project[] @relation("TasksByProjects")
    assignees   Member[]  @relation("TasksByAssignees")
}

model Member {
    id         String    @id @unique @default(uuid())
    created_at DateTime? @default(now())
    updated_at DateTime? @default(now()) @updatedAt
    name       String
    email      String    @unique
    tasks      Task[]    @relation("TasksByAssignees")
}
